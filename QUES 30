#include <iostream>
using namespace std;
int main()
{
    int salary[10], total = 0;
    for (int i = 0; i < 10; i++)
    {
        cout << "enter the " << i + 1 << " employee salary: ";
        cin >> salary[i];
        total = total + salary[i];
    }
    cout << "Total = " << total << endl;
    cout << "Average = " << total / 10.0;
    return 0;
}
