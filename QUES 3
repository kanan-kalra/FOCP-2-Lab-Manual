#include <iostream>
int main()
{
    using namespace std;
    int choice;
    int f;
    int c;
    cout << "choose:";
    cout << endl
         << "1.fahrenheit to celsius";
    cout << endl
         << "2.celsius to fahernheit:";
    cin >> choice;
    switch (choice)
    {
    case 1:
    {
        cout << "enter the temprature in faherheit:";
        cin >> f;
        c = (f - 32) * (5.0 / 9.0);
        cout << "temprature in celsius is :" << c;
    }
    break;
    case 2:
    {
        cout << "enter the temprature in celsius:";
        cin >> c;
        f = (c * (9.0 / 5.0)) + 32;
        cout << "temprature in fahernheit is :" << f;
    }
    break;
    }
    return 0;
}
