#include <iostream>
using namespace std;
int main()
{
    int a;
    cout << "Enter the score of 1st player:";
    cin >> a;
    int b;
    cout << "enter the score of second player:";
    cin >> b;
    int c;
    cout << "enter thw score of third player:";
    cin >> c;
    int largest;
    largest = (a > b) ? ((a > c) ? a : c) : ((b > c) ? b : c);
    if (largest == c)
    {
        cout << "player 3 is ahead of 1&2 player";
    }
    else if (largest == b)
    {
        cout << "player 2 is ahead of both 1&3 player ";
    }
    else
        cout << "player 1 is ahead of both 2&3 player";

    return 0;
}
