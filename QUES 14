#include <iostream>
using namespace std;
int main()
{
    int a, b;
    cout << "enter the value of first number:";
    cin >> a;
    cout << "enter the value of second number:";
    cin >> b;
    cout << "choose";
    cout << endl
         << "1.Addition";
    cout << endl
         << "2.Subtraction";
    cout << endl
         << "3.Multiplication";
    cout << endl
         << "4.Division";
    int choice;
    cout << endl
         << "Enter your choice: ";
    cin >> choice;
    switch (choice)
    {
    case 1:
    {
        cout << "Result: " << a + b;
    }
    break;
    case 2:
    {
        cout << "Result: " << a - b;
    }
    break;
    case 3:
    {
        cout << "Result: " << a * b;
    }
    break;
    case 4:
        if (b != 0)
            cout << "Result: " << (float)a / b;
        else
            cout << "Division by zero is not allowed";
        break;

    default:
        cout << "Invalid choice";
    }
    return 0;
}
